<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:lineSpacingExtra">@dimen/text_title_line_extra</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:lineSpacingExtra">@dimen/text_subtitle_line_extra</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_line_extra</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line_extra</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:lineSpacingExtra">@dimen/text_h2_line_extra</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:lineSpacingExtra">@dimen/text_h3_line_extra</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.H4">
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:lineSpacingExtra">@dimen/text_h4_line_extra</item>
        <item name="fontFamily">sans-serif</item>
    </style>


    <style name="TextAppearance.BodyLarge">
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_large_extra</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BodySmall">
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:lineSpacingExtra">@dimen/text_body_small_extra</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.LabelMedium">
        <item name="android:textSize">@dimen/text_label_medium</item>
        <item name="android:lineSpacingExtra">@dimen/text_label_medium_line_extra</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.ShapeAppearanceSmall"
        parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/normal_100</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.Button"
        parent="Widget.Material3.Button">
        <item name="shapeAppearance">
            @style/Theme.AndroidSchoolHxHCowboys.ShapeAppearanceSmall
        </item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.ShapeAppearanceTextInputLayout"
        parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/normal_200</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.TextInputLayout"
        parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">
            @style/Theme.AndroidSchoolHxHCowboys.ShapeAppearanceTextInputLayout
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.BodyLarge
        </item>
        <item name="hintTextAppearance">
            @style/TextAppearance.BodySmall
        </item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.ProfileButtonShapeAppearance"
        parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/normal_200</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.LeftButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/preview_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/preview_corner_radius</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.RightButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/preview_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/preview_corner_radius</item>
    </style>

    <style name="ProfileButton"
        parent="@style/Widget.Material3.Button">
        <item name="android:paddingTop">@dimen/normal_300</item>
        <item name="android:paddingBottom">@dimen/normal_300</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.BodySmall</item>
        <item name="shapeAppearance">
            @style/Theme.AndroidSchoolHxHCowboys.ProfileButtonShapeAppearance
        </item>
    </style>

    <style name="CountButtonLeft" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/counter_button_state</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="shapeAppearance">@style/Theme.AndroidSchoolHxHCowboys.LeftButtonShape</item>
    </style>

    <style name="CountButtonRight" parent="CountButtonLeft">
        <item name="shapeAppearance">@style/Theme.AndroidSchoolHxHCowboys.RightButtonShape</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/smalt</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.H3</item>
    </style>


    <style name="Theme.AndroidSchoolHxHCowboys.RoundedToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/secondary</item>
        <item name="navigationIconTint">@color/secondary</item>
        <item name="tabIconTint">@color/smalt</item>
        <item name="titleTextAppearance">@style/TextAppearance.H3</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.RoundedAppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.H3</item>
        <item name="shapeAppearance">@style/Theme.AndroidSchoolHxHCowboys.RoundedShape</item>
    </style>


    <style name="Theme.AndroidSchoolHxHCowboys.RoundedShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/normal_100</item>
    </style>

    <style name="Theme.AndroidSchoolHxHCowboys.TextButton"
        parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/Theme.AndroidSchoolHxHCowboys.RoundedShape</item>
        <item name="android:textAppearance">@style/TextAppearance.H4</item>
    </style>

    <style name="SmallIconButton"
        parent="@style/Widget.Material3.Button.TextButton.Icon">
        <item name="android:minHeight">28dip</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.LabelMedium</item>
    </style>
</resources>