<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayoutCL"
    android:background="@drawable/bottom_sheet_top_corners"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnTakePhoto"
            style="@style/Theme.AndroidSchoolHxHCowboys.TextButton"
            android:layout_marginTop="@dimen/normal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bottom_sheet_take_pic"
            />

        <Button
            android:id="@+id/btnGetFromGallery"
            style="@style/Theme.AndroidSchoolHxHCowboys.TextButton"
            android:layout_marginBottom="@dimen/normal_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bottom_sheet_from_galary"
             />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>