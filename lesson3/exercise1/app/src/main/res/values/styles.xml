<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
    </style>

    <style name="TextAppearance.TextField">
        <item name="android:textSize">@dimen/text_field_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_field_line</item>
    </style>

    <style name="TextAppearance.TextField.Hint">
        <item name="android:textSize">@dimen/text_field_hint_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_field_hint_line</item>
    </style>

    <style name="Theme.Exercise1.ShapeAppearanceTextInputLayout"
        parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/normal_100</item>
    </style>

    <style name="Theme.Exercise1.TextInputLayout"
        parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">
            @style/Theme.Exercise1.ShapeAppearanceTextInputLayout
        </item>
        <item name="android:textAppearance">
            @style/TextAppearance.TextField
        </item>
        <item name="hintTextAppearance">
            @style/TextAppearance.TextField.Hint
        </item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Theme.Exercise1.Button"
        parent="Widget.Material3.Button.ElevatedButton">
    </style>

</resources>